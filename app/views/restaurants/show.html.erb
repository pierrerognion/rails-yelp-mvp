<div class="container">
  <h1><%= @restaurant.name %></h1>
  <br>
  <br>
  <%= link_to "Delete", restaurant_path(@restaurant),
    method: :delete,
    data: { confirm: "Are you sure?" }, class: "btn btn-primary"%>
  
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <br>
  <br>
  <p><%= @restaurant.category %><p>
  <p><%= @restaurant.address %><p>
  
  <table>
    <thead>
      <tr>
        <th>Comment</th>
        <th>Rating</th>
   
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @restaurant.reviews.each do |review| %>
        <tr>
          <td><%= review.content %></td>
          <td><%= review.rating %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  
  <br>
  
  <%= link_to("Back to list", "/restaurants", class: "btn btn-primary") %>
  
</div>

